<!-- Top Nav Bar -->
	<nav class="top-bar" style="">
			<ul class="title-area">
				<li class="name">
					<h1><a href="/"><i class="icon-home"></i>{{ shop.name }}</a></h1>
				</li>
				<li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
			</ul>
		<section class="top-bar-section">
			<ul id="" class="left">
				{% for link in linklists.main-menu.links %}
					<li class="divider"></li>
					<li>{{ link.title | link_to: link.url }}</li>
				{% endfor %}
			</ul>
			<ul id="" class="right">
				<li>
					<a href="/cart"><i class="icon-shopping-cart"></i> {{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }} ({{ cart.total_price | money }})</a>
				</li>
				<li class="divider"></li>
